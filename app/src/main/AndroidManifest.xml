<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.datagithubuser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataGithubUser">
        <activity
            android:name="com.project.datagithubuser.ui.settings.SettingActivity"
            android:exported="false"
            android:parentActivityName="com.project.datagithubuser.ui.homepage.MainActivity"/>
        <activity
            android:name="com.project.datagithubuser.ui.favorite.FavoriteActivity"
            android:exported="false"
            android:parentActivityName="com.project.datagithubuser.ui.homepage.MainActivity" />
        <activity
            android:name="com.project.datagithubuser.ui.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name="com.project.datagithubuser.ui.homepage.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.project.datagithubuser.ui.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>